<!DOCTYPE html>
<html lang='{{ app.request.locale }}'>
	<head>
		{%- block meta -%}
        <meta charset="UTF-8">
		<meta name='color-scheme' content='{{ color_scheme }}'/>
		<meta name='viewport' content='width=device-width,initial-scale=1'/>
		{%- endblock meta -%}
        <title>{% block title %}{{ 'app.title' | trans }}{% endblock %} &bull; {{'app.title' | trans}}</title>
    	<link rel="icon" href="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="/>
		<link rel='stylesheet' href='/static/css/style.css?v={{"now"|date("Uv")}}'/>
	</head>
	<body>
		<header>
			<svg viewBox="0 0 5 5" width='2.5em'>
				<rect width="100%" height="100%" fill="var(--fg, CanvasText)" rx="5%"></rect>
				<path d="M2 1 1 4 2 4 2 1 3 4 4 4 3 1 2 1" fill="var(--bg, Canvas)"></path>
			</svg>
			{#-<p style='text-transform:uppercase;letter-spacing:var(--line);font-size:smaller'>
				Adam Blum Digital
			</p>-#}
			<nav>
				{%- import '@Shared/macro/menu.html.twig' as Menu -%}
				{{- 
					Menu.navigation('hi', [
						Menu.add('homepage.title', 'view_homepage'),
						Menu.add('services.title', 'view_services'),
						Menu.add('writing.title', 'view_get_some_articles')
					])
				-}}
			</nav>
		</header>
		<main>
			{%- block body -%}{%- endblock -%}
		</main>
		{% import '@Shared/macro/dialog.html.twig' as Dialog %}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				{{ Dialog.dialog(label, message, true) }}
			{% endfor %}
		{% endfor %}
		<footer>
			<p rel='copyright'>&copy; {{ 'now'|date('Y') }} Adam Blum Digital</p>
			<nav>
			<a href>CodePen</a>
			<a href>GitHub</a>
			<a href='/_profiler/latest'>Profiler</a>
			</nav>
		</footer>
	</body>
</html>
