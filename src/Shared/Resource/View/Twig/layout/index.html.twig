{% if block('header') is not empty %}
<header>
	{% block header %}
	{% endblock header %}
</header>
{% endif %}


{%- if items is not empty -%}

	{%- for item in items -%}
		{{ block('item') }}
	{%- endfor -%}

{%- else -%}

	{{ block('no_items') }}

{%- endif -%}


<footer>
	{% import '@Shared/macro/pagination.html.twig' as Pagination %}
	{{ Pagination.menu(
		page, 
		pages, 
		size, 
		items, 
		label_count_word, 
		app.request.get('_route'), 
		app.request.get('_route_params') 
	) }}
</footer>

