{% extends template.default %}
{%- block meta -%}
	{{ parent() }}
	<meta name='description' content='{{ article.description }}'/>
{%- endblock meta -%}
{%- block body -%}
{%- embed layout.default -%}
    {%- block content -%}
	<header>
		<h1>{{ article.title }}</h1>
		<dl style='font-size:smaller'>
			<dt>Published</dt>
			<dd>12 November 2022</dd>
			<dt>Category</dt>
			<dd>
				<a href='{{ path('view_get_category', {'id': article.category.id }) }}'>
					{{ article.category.title }}
				</a>
			</dd>
		</dl>

		<p style='font-size:larger'>{{ article.description }}</p>
		{#<p><code>{{ article.id }}</code></p>#}
	</header>
	{% if article.content is not empty %}
		{{ article.content | striptags('<p><a><code><h2><h3><h4><h5><h6><pre><ol><ul><li><figure><figcaption>') | raw }}
	{% endif %}

    {%- endblock content -%}
{%- endembed -%}
{%- endblock body -%}
