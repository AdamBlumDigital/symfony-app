{% extends template.default %}
{%- block body -%}
{%- embed layout.index with {
	'items'				:	articles, 
	'page'				:	page ?? null,
	'size'				:	size ?? null,
	'pages'				:	pages ?? null,
	'label_count'		:	'count.articles', 
	'label_count_word'	:	'count.articles.word', 
	'label_empty'		:	'label.no_articles' 
} -%}

	{%- block header -%}
		<h1>{{ 'generic.writing' | trans }} &rarr; {{ category.title }}</h1>
		{% if category.description is not empty %}
			<p>{{ category.description }}</p>
		{% endif %}
		<p>
			<a href='{{ path( 'view_get_some_articles')  }}'>
				View All Writing
			</a>
		</p>

	{%- endblock header -%}

	{%- block item -%}
		<article>

			<h2>
				<a href='{{ path( 'view_get_article', { 'id' : item.id } )  }}'>
					{{ item.title }}
				</a>
			</h2>

			<p>{{ item.description }}</p>

			<dl style='font-size:smaller'>
				<dt>Published</dt>
				<dd>12 November 2022</dd>
				<dt>Category</dt>
				<dd><a href='{{ path('view_get_category', {'id': item.category.id }) }}'>{{ item.category.title }}</a></dd>
			</dl>

		</article>

	{%- endblock item -%}	

	{%- block no_items -%}
		<article>
			<h1>{{ 'label.no_articles' | trans }}</h1>
		</article>
	{%- endblock no_items -%}

{%- endembed -%}
{%- endblock body -%}
