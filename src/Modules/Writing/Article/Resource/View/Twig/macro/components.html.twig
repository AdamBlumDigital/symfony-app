


{%- macro header(_uuid, _title, _description, _category_route, _category_id, _category_title ) -%}
	{{- _self._info(null, _uuid, _title, _description, _category_route, _category_id, _category_title) -}}
{%- endmacro header -%}

{%- macro snippet(_route, _uuid, _title, _description, _category_route, _category_id, _category_title ) -%}
	{{- _self._info(_route, _uuid, _title, _description, _category_route, _category_id, _category_title, 2) -}}
{%- endmacro snippet -%}


{%- macro _info(_route = null, _uuid, _title, _description, _category_route, _category_id, _category_title, _heading_level = 1 ) -%}
	{%- import '@Writing/macro/metadata.html.twig' as Metadata -%}
	<h{{_heading_level}}>
		{%- if _route is not null -%}
		<a href='{{ path( _route, { 'id' : _uuid } )}}'>
		{%- endif -%}
			{{ _title }}
		{%- if _route is not null -%}
		</a>
		{%- endif -%}
	</h{{_heading_level}}>
	{{ Metadata.date_and_category( _uuid, _category_route, _category_id, _category_title ) }}
	<p>{{ _description }}</p>
{%- endmacro _info -%}
